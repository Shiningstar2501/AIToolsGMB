{
  "manifest_version": 3,
  "name": "GMB AI Tools Extension",
  "version": "1.0",
  "description": "Inject AI tools into Google Maps to generate GMB content using Gemini API.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "https://www.google.com/maps/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon.png",    
      "48": "assets/icon.png",
      "128": "assets/icon.png"      
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  }
}
